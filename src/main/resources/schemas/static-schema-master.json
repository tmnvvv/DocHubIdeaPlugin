{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "JSON schema for dochub",
  "type": "object",
  "allOf": [{"$ref": "base-schema.json"}],
  "properties": {
    "entities": {
      "description": "Описание базовой сущности",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9]*$": {
          "type": "object",
          "properties": {
            "title": {
              "description": "Наименование сущности",
              "type": "string"
            },
            "routes": {
              "description": "Описание сегментов route",
              "type": "array",
              "items": {
                "type": "object",
                "minLength": 1,
                "patternProperties": {
                  "^[a-zA-Z0-9]*$": {
                    "type": "string",
                    "pattern": "([^:]+)\\s*:\\s*(.+?)"
                  }
                }
              }
            }
          },
          "required": ["title","routes"],
          "additionalProperties": false
        }
      }
    }
  },
  "required": ["entities"],
  "additionalProperties": false
}